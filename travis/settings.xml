<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <servers>
        <server>
            <id>bintray-maven-repo</id>
            <username>cgoit</username>
            <password>${env.BINTRAY_API_KEY}</password>
        </server>
    </servers>

    <profiles>
        <profile>
            <id>sign</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <gpg.executable>gpg</gpg.executable>
                <gpg.keyname>${env.GPG_KEYNAME}</gpg.keyname>
                <gpg.passphrase>${env.GPG_PASSWORD}</gpg.passphrase>

                <!-- tell gpg to NOT use the default keyring from the current user's home -->
                <gpg.defaultKeyring>false</gpg.defaultKeyring>

                <!-- instead tell gpg to use the keyrings from your GPG_DIR -->
                <gpg.publicKeyring>${env.GPG_DIR}/pubring.auto</gpg.publicKeyring>
                <gpg.secretKeyring>${env.GPG_DIR}/secring.auto</gpg.secretKeyring>
            </properties>
        </profile>
    </profiles>

</settings>